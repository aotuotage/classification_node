<!DOCTYPE html>
<html>
	<head>
		<meta charset="utf-8" />
		<title>登录新玩具</title>
        <script type="text/javascript" src="./javascripts/jquery.min.js" ></script>
        <style>
            *{
                margin: 0;
                padding: 0;
            }
            body{
                background: #3d598a;
            }
            .login{
                width: 400px;
                height: 300px;
                background: #fff;
                border-radius: 20px;
                position: absolute;
                top: 50%;
                left: 50%;
                margin-top: -150px;
                margin-left: -200px;
            }
            .login input{
                width: 200px;
                height: 30px; 
                border: 1px solid #666;
                border-radius: 5px;
                margin: 0 auto;   
                margin-top: 50px;
                padding-left: 10px;
            }
            .login label{
                height: 30px;
                line-height: 30px;
                margin-left: 80px;
                display: inline-block;
                margin-right: 10px;
            }
            .subbtn{
                background: #3d598a;
                margin: 0 auto;
                display: block;
                color: #fff;
                cursor: pointer;
            }
            .box{ 
                font-size: 50px;
                text-align: center;
                color:#fff; 
                margin-top: 120px;
                animation: changeshadow 1s  ease-in  infinite ;
                /* 其它浏览器兼容性前缀 */
                -webkit-animation: changeshadow 1s linear infinite;
                -moz-animation: changeshadow 1s linear infinite;
                -ms-animation: changeshadow 1s linear infinite;
                -o-animation: changeshadow 1s linear infinite;
            }  
            @keyframes changeshadow {  
                0%{ text-shadow: 0 0 4px #fff}  
                50%{ text-shadow: 0 0 40px #fff}  
                100%{ text-shadow: 0 0 4px #fff}  
            }
            /* 添加兼容性前缀 */
            @-webkit-keyframes changeshadow {
            0%{ text-shadow: 0 0 4px #fff}  
                50%{ text-shadow: 0 0 40px #fff}  
                100%{ text-shadow: 0 0 4px #fff}  
            }
            @-moz-keyframes changeshadow {
                0%{ text-shadow: 0 0 4px #fff}  
                    50%{ text-shadow: 0 0 40px #fff}  
                    100%{ text-shadow: 0 0 4px #fff}  
            }
            @-ms-keyframes changeshadow {
                0%{ text-shadow: 0 0 4px #fff}  
                    50%{ text-shadow: 0 0 40px #fff}  
                    100%{ text-shadow: 0 0 4px #fff}  
            }
            @-o-keyframes changeshadow {
                0%{ text-shadow: 0 0 4px #fff}  
                    50%{ text-shadow: 0 0 40px #fff}  
                    100%{ text-shadow: 0 0 4px #fff}  
            }
        </style>
	</head>
	<body>
        <div class="title">
            <p class="box">新玩具无限公司</p> 
        </div>
		<div class="login">
            <form class="subform">
                <label>名称</label>
                <input type="text" name="name" placeholder="用户名">
                <br />
                <label>密码</label>
                <input type="password" name="password" placeholder="密码">
                <input type="button" class="subbtn" value="提交">
            </form>
        </div>
    <script>
        $(".subbtn").click(function(){
            let name = $("input[name='name']").val();
            let password = $("input[name='password']").val();
            if(name !== "" && password !== ""){
                $.ajax({
                    url:"https://www.xinwanju.cn/login/req",  
                    headers:{"Content-Type":"application/x-www-form-urlencoded"},
                    dataType:"json",  
                    data:$(".subform").serialize(), 
                    type:"POST", 
                    success:function(req){
                        if(req.code !== 200){
                            alert("账号或密码错误");
                        }else{
                            alert("登录成功");
                            window.location.href = 'https://39.100.117.181/admin'
                        }
                    }
                })
            }else{
                alert("不能为空")
            }  
        })
    </script>
	</body>
</html>
